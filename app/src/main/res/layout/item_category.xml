<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MANAGE CATEGORIES"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Category Name Input -->
        <EditText
            android:id="@+id/etCategoryName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter category name"
            android:inputType="textCapWords" />

        <!-- Color Picker Spinner -->
        <Spinner
            android:id="@+id/spinnerColor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp" />

        <!-- Add Category Button -->
        <Button
            android:id="@+id/btnAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Category"
            android:layout_marginTop="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="16dp" />

        <!-- Search for Expenses -->
        <EditText
            android:id="@+id/etSearchExpense"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Search Expenses"
            android:inputType="text"
            android:layout_marginTop="8dp" />

        <!-- RecyclerView to show category list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="8dp" />

        <!-- Add Expense Section -->
        <TextView
            android:id="@+id/expenseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD EXPENSE"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <!-- Expense Amount Input -->
        <EditText
            android:id="@+id/etExpenseAmount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Amount (R)"
            android:inputType="numberDecimal" />

        <!-- Expense Date Picker -->
        <EditText
            android:id="@+id/etExpenseDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Select Date"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true" />

        <!-- Expense Description Input -->
        <EditText
            android:id="@+id/etExpenseDescription"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter description"
            android:inputType="textCapSentences" />

        <!-- Category Spinner for Expense -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp" />

        <!-- Add Expense Button -->
        <Button
            android:id="@+id/btnAddExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Expense"
            android:layout_marginTop="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="16dp" />

        <!-- RecyclerView to show expense list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</ScrollView>
